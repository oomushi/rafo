<h1>Listing images</h1>

<table>
  <tr>
    <th>Image</th>
    <th></th>
  </tr>
<% @images.each do |image| %>
  <tr>
    <td><img src="<%= image_path image %>.png"/></td>
    <td><%= link_to 'Destroy', image, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New Image', new_image_path %>
