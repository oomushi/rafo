<h1>Listing icons</h1>

<table>
  <tr>
    <th>User</th>
    <th>Content type</th>
    <th>Filename</th>
    <th>Thumbnail</th>
    <th>Size</th>
    <th>Width</th>
    <th>Height</th>
    <th>Parent</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @icons.each do |icon| %>
  <tr>
    <td><%= icon.user_id %></td>
    <td><%= icon.content_type %></td>
    <td><%= icon.filename %></td>
    <td><%= icon.thumbnail %></td>
    <td><%= icon.size %></td>
    <td><%= icon.width %></td>
    <td><%= icon.height %></td>
    <td><%= icon.parent_id %></td>
    <td><%= link_to 'Show', icon %></td>
    <td><%= link_to 'Edit', edit_icon_path(icon) %></td>
    <td><%= link_to 'Destroy', icon, confirm: 'Are you sure?', method: :delete %></td>
    <td><%= link_to image_tag(icon.public_filename(:thumb)), icon.public_filename %></td>
  </tr>
<% end %>
</table>

