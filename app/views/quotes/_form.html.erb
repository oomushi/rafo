<%= form_for(quote) do |f| %>
<tr>
  <td class="field">
    <%= f.text_area :text,:rows=>3 %>
    <%= f.hidden_field :user_id %>
  </td>
  <td class="actions">
    <%= f.submit %>
  </td>
  <td class="actions">
    <% unless quote.id.nil? %>
    <%= link_to 'Destroy', quote, confirm: 'Are you sure?', method: :delete %>
    <% end %>
  </td>
</tr>
<% end %>
